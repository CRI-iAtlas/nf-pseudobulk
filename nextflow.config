profiles {
    local {
        process.executor  = 'local'
    }

    docker {
        docker.enabled    = true
        process.container = 'ghcr.io/cri-iatlas/nf-htan-scripts'
    }

    tower {
        docker.enabled    = true
        process {
            container     = 'ghcr.io/cri-iatlas/nf-htan-scripts'
            cpus          = { 1 * task.attempt }
            memory        = { 4.GB * task.attempt }
            maxRetries    = 3
            errorStrategy = 'retry'
         }
    }
}